<launch>
  <!-- Launch the grid map simple demo node -->
  <node pkg="grid_map_demos" type="extend_include_demo" name="extend_include_demo" output="screen" />
  <!-- Launch the grid map visualizer -->
  <node pkg="grid_map_visualization" type="grid_map_visualization" name="grid_map_visualization" output="screen">
    <rosparam command="load" file="$(find grid_map_demos)/config/extend_include_demo.yaml" />
  </node>
  <!-- Launch RViz with the demo configuration -->
  <node name="rviz" pkg="rviz" type="rviz" args="-d $(find grid_map_demos)/rviz/extend_include_demo.rviz" />
</launch>
